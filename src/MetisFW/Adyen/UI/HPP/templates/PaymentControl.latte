<form method="post" action="{$operation->getEndpointUrl()}"
  class="adyen-form"
  name="adyenForm"
  data-merchant-reference="{$payment->getMerchantReference()}">
  data-checkout-link="{$checkoutLink}">
  {foreach $payment->getValues() as $name => $value}
    <input type="hidden" name="{$name}" value="{$value}"/>
  {/foreach}
  <input type="submit" class="adyen-submit-button" value="{$text}" n:attr="(expand)$attrs" />
</form>